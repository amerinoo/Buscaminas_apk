<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@android:color/holo_orange_light">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ayuda"
            android:id="@+id/button_ayuda"
            android:layout_gravity="center_horizontal"
            android:onClick="goAyuda"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empezar_partida"
            android:id="@+id/button_empezar_partida"
            android:layout_gravity="center_horizontal"
            android:onClick="goEmpezarPartida"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/consultarPartidas"
            android:layout_gravity="center_horizontal"
            android:onClick="goConsultarBD"
            android:id="@+id/button" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/salir"
            android:id="@+id/button_salir_principal"
            android:layout_gravity="center_horizontal"
            android:onClick="goSalir"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="43dp"
            android:id="@+id/imageView"
            android:src="@mipmap/icono_bomba"
            android:layout_weight="0.07" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/titulo_main"
            android:textSize="32dp"
            android:id="@+id/titulo_principal" />
    </LinearLayout>

</RelativeLayout>
